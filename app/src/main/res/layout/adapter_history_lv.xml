<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp">

    <TextView
        android:id="@+id/tv_date_history"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"/>
    <TextView
        android:id="@+id/tv_euro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:text="@string/euro_sign"/>
    <TextView
        android:id="@+id/tv_value_history"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/tv_euro"
        android:layout_toStartOf="@id/tv_euro"
        android:layout_centerVertical="true"/>
    <TextView
        android:id="@+id/tv_tag_history"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/tv_date_history"
        android:layout_toEndOf="@id/tv_date_history"
        android:layout_toStartOf="@id/tv_value_history"
        android:layout_toLeftOf="@id/tv_value_history"
        android:layout_centerVertical="true"
        />


</RelativeLayout>